generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Enable Data Proxy
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // Optional for migrations
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  password       String
  name           String
  age            Int?
  gender         String?
  height         Int?
  weight         Int?
  activity_level String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  barcode     String   @unique
  name        String
  brand       String
  category    String
  calories    Float
  fat         Float
  protein     Float
  carbs       Float
  sugar       Float
  ingredients String
  createdAt   DateTime @default(now())
}
